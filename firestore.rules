rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regra para a coleção 'users'
    // Permite que um usuário acesse apenas seu próprio documento
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Regras para as subcoleções (transações, orçamentos, metas de economia)
      // Permite que um usuário leia e escreva em suas próprias subcoleções
      match /{collection}/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
